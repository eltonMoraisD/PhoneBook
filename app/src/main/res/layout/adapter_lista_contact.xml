<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagemUsuario"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_contact_default_24dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomeUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Nome"
                    android:layout_marginLeft="10sp"
                    />

                <TextView
                    android:id="@+id/telefoneUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="telefone"
                    android:textSize="15sp"
                    android:layout_marginLeft="10sp"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    />


                <TextView
                    android:id="@+id/emailUsuario"
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:text="email"
                    android:layout_marginLeft="10sp"

                    />
                <TextView
                    android:id="@+id/dataNasc"
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:text="data de nascimento"
                    android:layout_marginLeft="10sp"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/btnAtualizarContato"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/ic_atualizar_preto_24dp"
                        android:layout_marginStart="280dp"
                        android:layout_marginLeft="280dp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>



</LinearLayout>